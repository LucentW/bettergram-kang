{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
	{
		"label": "gyp refresh",
		"type": "shell",
		"command": "${workspaceRoot}/Telegram/gyp/refresh.sh",
		"group": "build",
		"presentation": {
			"reveal": "always",
			"panel": "new"
		},
		"problemMatcher": []
	},
	{
		"label": "make debug",
		"type": "shell",
		"command": "cmake --build ${workspaceRoot}/out/Debug --target all -- -j4",
		"group": "build",
		"presentation": {
			"reveal": "always",
			"panel": "new"
		},
		"problemMatcher": [
			{
				"base": "$gcc",
				"fileLocation": "absolute"
			}
		]
	},
	{
		"label": "make release",
		"type": "shell",
		"command": "cmake --build ${workspaceRoot}/out/Release --target all -- -j4",
		"group": "build",
		"presentation": {
			"reveal": "always",
			"panel": "new"
		},
		"problemMatcher": [
			{
				"base": "$gcc",
				"fileLocation": "absolute"
			}
		]
	}
  ]
}
